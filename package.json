{
  "name": "portfolio-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "pages:build": "npx @cloudflare/next-on-pages",
    "preview": "npm run pages:build && wrangler pages dev",
    "start": "next start",
    "cms:dev": "tsx cms/server.ts",
    "cms:start": "NODE_ENV=production tsx cms/server.ts",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "deploy": "npm run pages:build && wrangler pages deploy .vercel/output/static"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@payloadcms/db-sqlite": "^3.59.1",
    "@payloadcms/richtext-lexical": "^3.59.1",
    "@payloadcms/storage-r2": "^3.59.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "framer-motion": "^12.23.24",
    "next": "15.5.5",
    "next-google-fonts": "^2.2.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "payload": "^3.59.1",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@eslint/eslintrc": "^3",
    "@payloadcms/bundler-webpack": "^1.0.7",
    "@payloadcms/next": "^3.59.1",
    "@playwright/test": "^1.56.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.5",
    "ignore-loader": "^0.1.2",
    "typescript": "^5",
    "tsx": "^4.19.2",
    "wrangler": "^4.43.0"
  }
}
